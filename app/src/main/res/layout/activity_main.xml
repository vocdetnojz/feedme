<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:fontFamily="@font/cabin_bold"
            android:textSize="30sp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:id="@+id/selectedFood"/>
    <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp" app:srcCompat="@drawable/dd_logo"
            android:id="@+id/imageView" android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.5"/>
    <Button
            android:text="Decide"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:id="@+id/decideButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/Widget.AppCompat.Button.Borderless" android:background="@color/colorPrimary"
            android:fontFamily="@font/cabin_bold" android:textSize="24sp" app:layout_constraintHorizontal_bias="0.0"
            android:textColor="@android:color/background_light"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/dishText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/cabin_bold" android:contentDescription="dinner variant"
            android:hint="add new food..."
            android:layout_marginBottom="112dp" app:layout_constraintBottom_toTopOf="@+id/decideButton"
            android:textAlignment="center"/>
    <Button
            android:text="add food"
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:id="@+id/addButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            style="@style/Widget.AppCompat.Button.Borderless" android:background="@color/colorPrimary"
            android:textColor="@android:color/background_light" android:fontFamily="@font/cabin_bold"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/dishText"/>

</android.support.constraint.ConstraintLayout>